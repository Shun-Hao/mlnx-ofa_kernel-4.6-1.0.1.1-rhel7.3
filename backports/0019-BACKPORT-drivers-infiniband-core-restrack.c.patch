 	struct rdma_restrack_entry *e;
 	u32 cnt = 0;
+	COMPAT_HL_NODE
 
 	down_read(&res->rwsem);
+#ifdef HAVE_HLIST_FOR_EACH_ENTRY_3_PARAMS
 	hash_for_each_possible(res->hash, e, node, type) {
